<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <%-include('adminHeader.ejs')%>

    <h2>Quản Lý Chuyên Mục</h2>
    <div class="tables-container">
        <div class="main-category">
            <h3>Chuyên Mục Chính</h3>

            <!-- <div class="form-container">
            <input type="text" id="main-category-input" placeholder="Nhập tên chuyên mục chính" />
            <button>Thêm  </button>
            </div> -->

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Chuyên Mục</th>
                        <th> &nbsp; </th>
                    </tr>
                </thead>
                <tbody id="main-category-table">
                    <tr>
                        <td> col1 </td>
                        <td> col2 </td>
                        <td> col3 </td>
                    </tr>
                    
                    <% parameters = typeof parameters !== 'object' ? { categories : [] } : parameters %>
                    <% categories = parameters.categories %>
                    <% for (let i = 0; i < categories.length; i++) { %>
                        <tr>
                            <td> <%= categories[i]._id %> </td>
                            <td> <%= categories[i].name %> </td>
                            <form id="delete_<%= i %>" action="/admin/categories/delete" method="post">
                                <input name="_id" type="text" value="<%= categories[i]._id %>" hidden>
                            </form>
                            <td> 
                                <a class="btn btn-danger" href="javascript: $('#delete_<%= i %>').submit()" role="button"> <i class="bi bi-trash3"></i> </a> 
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

        </div>
    </div>

    <%-include('adminFooter.ejs')%>
</body>