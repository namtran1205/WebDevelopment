  <title>Navigation Menu</title>
  <style>
    body {
        font-family: "Poppins", serif;
        flex-direction: column;
        min-height: 100vh;
        position: relative;
        display: flex;
    }
    header {
    }
    .nav-container {
      position: relative;
      background: linear-gradient(60deg, #EFD595, #ef9595e7);
      display: flex;
      flex-direction: column;
      padding: 1px;
    }
    .slide-show {
      margin-top: 15px;
      width: 1300px;
      max-width: 95vw;
      height: 500px;
      position: relative;
      align-self: center;
      justify-content: center;
      overflow: hidden;
    }

    .list-slide {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      display: flex;
      width: max-content;
      transition: 1s;
    }

    .list-slide img {
      width: 1300px; 
      height: 500px; 
      object-fit: cover; 
      max-width: 95vw;
      object-position: center;
    }

    .buttons {
      position: absolute;
      top: 45%;
      left: 5%;
      width: 90%;
      display: flex;
      justify-content: space-between;
    }
    .buttons button {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: rgba(82, 118, 136, 0.333);
      color: #fff;
    }
    .dots {
      position: absolute;
      bottom: 10px;
      color: #fff;
      left: 0;
      width: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
    }
    .dots li {
      list-style: none;
      width: 10px;
      height: 10px;
      background: linear-gradient(to right,#EF9595, #EFD595);
      margin: 20px;
      border-radius: 20px;
      transition: 1s;
    }
    .dots li.active {
      width: 30px;
    }
    .list-images {
      display: flex;
      flex-direction: row;
      width: 40%;
      overflow: hidden;
      position: relative;
    }
    .list-images img {
      width: 100%;
      height: auto; 
      object-fit: cover;
      max-width: 100%; 
    }
    .menu {
      display: flex;
      padding: 0;
      list-style-type: none;
      flex-direction: row;
      z-index: 0;
    }
    .menu li {
      padding: 10px;
      border-bottom: 1px solid #555;
      border-radius: 5px;
      background-color: antiquewhite;
      margin-right: 1px;
    }
    .menu li a {
      color: #333;
      text-decoration: none;
      display: block;
    }
    .menu li i {
        color: #333;
        text-decoration: none;
        align-content: center;
        display: block;
    }
    .menu li:hover {
      background-color: #555;
    }
    .menu-btn {
        color: #333;
        font-size: 30px;
        cursor: pointer;
        z-index: 1;
      }
    .menu-btn.disabled {
    opacity: 0.5;
    pointer-events: none;
    }
    .menu-wrapper {
        overflow: hidden;
        width: 40%;
        display: flex;
        border: 2px solid #555;
        border-radius: 5px;
        background-color: #fff;
      }
      .menu-wrapper {
        overflow-x: auto; 
        white-space: nowrap; 
        -webkit-overflow-scrolling: touch; 
    }
    
    .menu-wrapper::-webkit-scrollbar {
        height: 8px;
    }
    
    .menu-wrapper::-webkit-scrollbar-track {
        background: #222; 
        border-radius: 5px;
    }
    
    .menu-wrapper::-webkit-scrollbar-thumb {

        border-radius: 5px;
        visibility: hidden;
    }
    
    .scroll-box {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        flex: 1;
        padding: 5px 0px;
    }
    .profile {
        display: block;
        margin-right: 10px;
        position: absolute;
        bottom: 5%;
        right: 5%;
    }
    .profile i {
        font-size: 50px;
        color: #333;
        cursor: pointer;
    }
    main {
        flex: 1;
        background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)) ,url("/media/main-bg.png");
        justify-content: center;
        display: flex;
    }
    .content {
        width: 80%;
        position: relative;
        display: flex; 
        flex-direction: column;
        justify-content: flex-start; 
        background-color: #fff;
        padding: 5px;
    }
    .search-container {
        display: flex;
        align-self: center;
        align-items: center;
        border: 1px solid #333;
        border-radius: 5px;
        overflow: hidden;
        max-width: 400px;
        height: 10%;
        width: 100%;
    }
    .search-container input {
        border: none;
        padding: 10px;
        flex: 1;
        outline: none;
    }
    .search-container i {
        padding: 10px;
        background-color: #333;
        color: white;
        cursor: pointer;
    }
    footer {
        text-align: center;
        padding: 10px;
        background: linear-gradient(60deg, #EFD595, #EF9595);
        color: rgb(0, 0, 0);
        margin-bottom: 0;
        position: relative;
    }
    .tag-list {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
        justify-content: center;
    }
    
    .tag {
        background-color: #f1f1f1;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        color: #333;
        border: 1px solid #ccc;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }
    
    .tag:hover {
        background-color: #333;
        color: #fff;
    }

    .list-news {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-top: 20px;
      }
    
      .news-item {
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
        background-color: #f9f9f9;
      }
    
      .news-item img {
        width: 100%;
        height: auto;
        border-radius: 5px;
      }
    
      .news-title {
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0;
      }
    
      .news-date {
        font-size: 14px;
        color: #555;
      }
      .list-page {
        align-self: center;
        display: flex;
        flex-direction: row;
        margin-top: 10px;
      }
      .list-page i {
        cursor: pointer;
        align-items: center;
      }
      .list-number {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
      .list-number li {
        text-decoration: none;
        display: block;
        margin-right: 5px;
        margin-left: 5px;
      }
      @media (max-width: 480px) {
        .list-news {
          grid-template-columns: 1fr;
        }
      }
  </style>
</head>
