  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('../header.ejs') %>

    <div class="container-fluid">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar bg-light border-end">
          <div class="sidebar-header p-3">
            <h5 class="text-center">Menu</h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <a href="/" class="text-decoration-none">
                <i class="bx bx-home"></i> Home
              </a>
            </li>
            <li class="list-group-item">
              <a href="/editor/drafts" class="text-decoration-none">
                <i class="bx bx-pencil"></i>  Danh sách bài viết chờ duyệt
              </a>
            </li>
            <li class="list-group-item">
              <a href="/editor/approved" class="text-decoration-none">
                <i class="bx bx-check-circle"></i> Danh sách bài viết đã duyệt
              </a>
            </li>
            <li class="list-group-item">
              <a href="/editor/rejected" class="text-decoration-none">
                <i class="bx bx-x-circle"></i> Danh sách bài viết từ chối
              </a>
            </li>
          </ul>
        </div>
      
        <!-- Main Content -->
        <div id="main-content" class="main-content">
          <div class="header d-flex justify-content-between align-items-center p-3 border-bottom">
            <h4>Social Planner</h4>
            <div>
              <button class="btn btn-outline-primary">Send Feedback</button>
              <button class="btn btn-outline-secondary">Open Planner</button>
              <button class="btn btn-primary">+ New Post</button>
            </div>
          </div>
      
          <div class="stats-container p-4">
            <div class="row text-center">
              <div class="col-md-4">
                <div class="stat-box border p-3">
                  <h6>Connected Socials</h6>
                  <p class="stat-value">18</p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="stat-box border p-3">
                  <h6>Total Posts</h6>
                  <p class="stat-value">226</p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="stat-box border p-3">
                  <h6>Posts/day</h6>
                  <p class="stat-value">0</p>
                </div>
              </div>
            </div>
          </div>
      
          <div class="account-stats p-4">
            <h5>Account Stats</h5>
            <table class="table">
              <thead>
                <tr>
                  <th>Social Account</th>
                  <th>Posts</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>WebXly</td>
                  <td>4</td>
                </tr>
                <tr>
                  <td>Finally! Sales & Marketing</td>
                  <td>1</td>
                </tr>
                <tr>
                  <td>foodfashionfitnessfamilyfun</td>
                  <td>10</td>
                </tr>
                <tr>
                  <td>Rant and Resolve</td>
                  <td>9</td>
                </tr>
                <tr>
                  <td>SaaSPro</td>
                  <td>0</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      
</body>