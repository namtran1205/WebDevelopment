  <link href="https://fonts.googleapis.com/css2?family=Edu+AU+VIC+WA+NT+Pre:wght@400..700&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/footer.css">

</head>
<body>
    <%-include('header.ejs')%>
    <main>
      <div class="content" id="content">
        <div class="container my-5">
          <div class="row">
            <div class="col-md-4">
              <!-- Sidebar -->
              <div class="text-black p-3 rounded" style="background-color: #FAEBD7;">
                <div class="text-center">
                  <div class="text-center">
                    <img src="/media/avatar.jpg" alt="User Avatar" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                  </div>
                  <h4>User name</h4>
                </div>
                <hr>
                <ul class="nav flex-column">
                  <li class="nav-item">
                    <a class="nav-link text-black" href="#">Thông tin tài khoản</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-black" href="#">Đổi mật khẩu</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-black" href="#">Đăng xuất</a>
                  </li>
                </ul>
              </div>
            </div>
      
            <div class="col-md-8">
              <!-- Account Details -->
              <div class="card p-4">
                <h5 class="card-title">Thông tin tài khoản</h5>
                <form action="/profile/update" method="POST">
                  <div class="mb-3">
                    <label for="displayName" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="displayName" name="displayName">
                  </div>

                  <div class="mb-3">
                    <label for="displayName" class="form-label">Bút danh</label>
                    <input type="text" class="form-control" id="displayName" name="displayName">
                  </div>

                  <div class="mb-3">
                    <label for="dateOfBirth">Ngày sinh</label>
                      <div style="display: flex; gap: 10px; align-items: center;">
                        <select id="day" name="day" disabled>
                          <option selected>Ngày</option>
                        </select>

                        <select id="month" name="month" disabled>
                          <option selected>Tháng</option>
                        </select>
                        
                        <select id="year" name="year" disabled>
                          <option  selected>Năm</option>

                        </select>
                      </div>
                  </div>

                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                  <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary text-black" style="background-color: #FAEBD7;">Lưu thay đổi</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%-include('footer.ejs')%>
    
    <script src="/js/handle-menu.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>