<header>
    <div class="header-container">
        <div class="web-title"><h2>ELECTRONIC NEWSPAPER</h2></div>
        <div class="scroll-box">
            <i class='bx bxs-left-arrow menu-btn' id="left-btn"></i>
            <div class="menu-wrapper" id="menuWrapper">
                <ul class="menu-cate mt-3" id="menu">
                  <% for (var i = 1; i <= 20; i++) { %> 
                    <li class="category<%=i%>"><a href="/<%=i%>" data-id="<%=i%>"><%=i%></a></li>
                    <% } %>
                </ul>
            </div>
            <i class='bx bxs-right-arrow menu-btn' id="right-btn"></i>
        </div>
        <div class="list-nav">
            <% if (user) { %>
                <a href="/profile/<%= user._id %>" class="login">
                    <i class='bx bxs-user-rectangle'></i>
                </a>
            <% } else { %>
                <a href="/login" class="login" id="load-login-btn"><i class='bx bx-log-in' ></i></a>
            <% } %>
          <a href="/" class="home"><i class='bx bx-home-circle'></i></a>
        </div>
    </div>
    <script src="/js/handle-menu.js"></script>
</header>