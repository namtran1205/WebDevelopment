<header>
    <div class="header-container">
        <div class="web-title"><h2>DIGITAL NEWSPAPER</h2></div>
        <div class="event">
            <div class="noel">
                <img class="santa" src="/media/santa-2.gif" alt="">
                <div class="list-tree">
                    <% for (var i = 0; i < 100 ; i++) {%>
                        <img class="tree" src="/media/hometown.gif" alt="">
                    <%}%>
                </div>
            </div>
        </div>
        <div class="scroll_box">
            <ul class="list_category">
                <% for(let i = 0; i < categories.length; i++) { %>
                    <li class="category"><a href="/category/<%=categories[i]._id%>"><%= categories[i].name %></a></li>
                <% } %>
            </ul>
        </div>
        <div class="list-nav">
            <% if (user) { %>
                <a href="/profile/<%= user._id %>" class="login">
                    <i class='bx bxs-user-rectangle'></i>
                </a>
            <% } else { %>
                <a href="/login" class="login" id="load-login-btn"><i class='bx bx-log-in' ></i></a>
            <% } %>
          <a href="/" class="home"><i class='bx bx-home-circle'></i></a>
        </div>
    </div>
    <script src="/js/handle-menu.js"></script>
</header>