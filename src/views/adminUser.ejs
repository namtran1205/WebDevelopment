</head>
<body>
  <div class="web-title"><h2>DIGITAL NEWSPAPER</h2></div>
  <div class="admin-container">
    <div class="sidebar">
      <h2>Trang Quản Trị</h2>
      <ul class="nav-links">
        <li> <a name="adminCategories" id="adminCategories" href="/admin/categories" role="button"> Quản Lý Chuyên Mục </a> </li>
        <li> <a name="adminTags" id="adminTags" href="/admin/tags" role="button"> Quản Lý Nhãn </a> </li>
        <li> <a name="adminPosts" id="adminPosts" href="/admin/posts" role="button"> Quản Lý Bài Viết </a> </li>
        <li> <a name="adminUsers" id="adminUsers" href="/admin/users" role="button"> Quản Lý Người Dùng </a> </li>
        <li class="logout"><a href="/login"> Logout </a></li>
      </ul>
    </div>
  
    <div class="main-content">
      <h1>Chào Mừng Đến Trang Quản Trị</h1>
      <div id="content-area">

        <!-- body -->        

        
      <div id="user" class="content-section">
          <h2 class="mb-3">Quản Lý Người Dùng</h2>
        
          <!-- Danh sách người dùng -->
          <div class="user-list-container">
            <h3>Danh Sách Người Dùng</h3>
            <table class="table">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Tên Người Dùng</th>
                  <th>Vai Trò</th>
                  <th>Chỉnh sửa</th>
                  <!-- <th>Xóa</th> -->
                </tr>
              </thead>
              <tbody id="user-list">
                <% parameters = typeof parameters !== 'object' ? {} : parameters %>
                <% userList = parameters.userList %>
                <% for (let i = 0; i < userList.length; i++) { %>
                    <tr>
                        <td> <%= userList[i].email %> </td>
                        <td> <%= userList[i].fullName %> </td>
                        <td> <%= userList[i].type %></td>
                        <td> 
                            <a class="btn btn-primary" href="/admin/users/details?id=<%= userList[i]._id %>" role="button"> ABC </a> 
                        </td>
                    </tr>
                <% } %>
              </tbody>
            </table>
          </div>
      </div>

    </div>
  </div>
  
</body>
</html>